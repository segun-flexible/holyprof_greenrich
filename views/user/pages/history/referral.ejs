<%-include("../../partials/header")%>

<div class="container-fluid mt--6">




        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <h5 class="card-header"><%=title%></h5>
                    
                    <div class="card-body p-0">
                        <%if(history.length> 0){ %>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class="bg-light">
                                        <tr class="border-0">
                                            <th class="border-0">#</th>
                                            <th class="border-0">Name</th>
                                            <th class="border-0">Amount</th>
                                            
                                            <th class="border-0">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%history.map((ht,index)=>{ %>
                                            <tr>
                                                <td>
                                                    <%=index + 1 %>
                                                </td>
                                                
                                                <td style="text-transform: capitalize;">
                                                    <%=ht.fullname %> (<%=ht.username %>)
                                                </td>

                                                <td>
                                                    <%=websiteDetails.website_currency%><%=ht.r_amount.toLocaleString()%>
                                                </td>
                                                
                                                <td>
                                                    <%if(ht.r_status){%>
                                                    <button type="button" class="btn btn-success btn-sm waves-effect waves-light"><i class="fa fa-check" aria-hidden="true"></i>Completed</button>
                                                    <%}else{%>
                                                    <button type="button" class="btn btn-danger btn-sm waves-effect waves-light"><i class="fa fa-check" aria-hidden="true"></i>Pending</button>
                                                    <%}%>
                                                </td>
                                                
                                                
                                                

                                               
                                                
                                                

                                                


                                            </tr>

                                            
                                            
                                            <% }) %>

                                                
                                    </tbody>

                                </table>



                                

                            </div>
                            <%if(history.length){%>
                    <%-include("../../partials/pagination");%>
                    <%}%>
                            <% }else{%>
                                <h3 class="text-center pt-3">No Referral Stats At The Moment</h3>
                                <%}%>
                    </div>
                </div>
            </div>
        </div>
<script src="/js/user/history/withdrawal.js"></script>
<%-include("../../partials/footer")%>