<%-include("../../partials/header")%>


<div class="container-fluid mt--6">




    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-12">
            
            
            <div class="card">
                <div class="card-body">
            
            
                    <form id="activation">
                        <div class="form-group">
                            <label class="form-control-label" for="fee">Send Payment To This Account</label>
                            <p><%-websiteDetails.website_activation_fee_bank_account%></p>
                        </div>
                        <br><br>
                        <div class="form-group">
                            <label class="form-control-label" for="fee">Fee Amount</label>
                            <input type="number" class="form-control" id="fee" required placeholder="Topup Amount">
                        </div>
                    
                    
                        <div class="form-group">
                            <label class="form-control-label" for="proof">Fee Proof (Payment Screenshot)</label>
                            <div class="custom-file">
                                <input required type="file" class="custom-file-input" id="proof" accept="image/*">
                                <label class="custom-file-label" for="customFileLang"></label>
                                <br>
                                <small>Once You Send Payment To The Above Bank Account, Make A Screenshot Of It And Upload It Here!</small>
                            </div>
                        </div>

                        <button id="send" type="submit" class="btn btn-primary">Topup Payment</button>
                    
                    
                    
                    </form>
            
                </div> <!-- end card-body-->
            </div>

        </div>
    </div>
 




<script src="/js/user/plans/activation.js"></script>

<script src="/js/partials/fetcher.js"></script>
<script src="/js/partials/sweetalert.js"></script>

<%-include("../../partials/footer")%>
