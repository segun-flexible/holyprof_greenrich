<%- include('../../partials/header'); %>




    <div class="container-fluid dashboard-content">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title">
                        <%= title %>
                    </h4>
                </div>
            </div>
        </div>
        <!-- end page title -->


        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">



                    <div class="card-body p-0">
                        <%if(testimony.length> 0){ %>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class="bg-light">
                                        <tr class="border-0">
                                            <th class="border-0">#</th>
                                            <th class="border-0">User</th>
                                            <th class="border-0">Message</th>
                                            <th class="border-0">Date</th>
                                            <th class="border-0">Status</th>
                                            <th class="border-0">Action</th>


                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%testimony.map((ts,index)=>{ %>
                                            <tr>
                                                <td>
                                                    <%=ts.uid %>
                                                </td>

                                                <td>
                                                    <%=ts.username%>
                                                </td>

                                                <td>
                                                    <button data-toggle="modal" data-target="#message-<%=ts.t_id%>" type="button" class="btn btn-info btn-xs waves-effect waves-light">View</button>
                                                </td>

                                                <td>
                                                    <%=ts.t_created_at %>
                                                </td>

                                                <td>
                                                    <%if(ts.t_status){%>
                                                    <button type="button" class="btn btn-info btn-xs waves-effect waves-light">Approved</button>
                                                    <%}else{%>
                                                    <button type="button" class="btn btn-danger btn-xs waves-effect waves-light">Pending</button>
                                                    <%} %>
                                                </td>

                                                <td>
                                                    <a onclick="approveTestimony('<%=ts.t_id%>',this)" href="javascript: void(0);" class="btn btn-xs btn-success ml-1 delete"><i class="fa fa-thumbs-o-up"
                                                    aria-hidden="true"></i></a>

                                                    <a onclick="deleteTestimony('<%=ts.t_id%>',this)" href="javascript: void(0);" class="btn btn-xs btn-danger ml-1 delete"><i class="fa fa-trash"
                                                    aria-hidden="true"></i></a>
                                                </td>



                                            </tr>

                                            <%-include("./modal/message",{ts})%>


                                            <% }) %>

                                                <tr>
                                                    <td colspan="9"></td>
                                                </tr>
                                    </tbody>

                                </table>
                                <%-include("../../partials/pagination")%>

                                




                            </div>
                            <% }else{%>
                                <h3 class="text-center pt-3">No Testimony At The Momment</h3>
                                <%}%>
                    </div>
                </div>
            </div>
        </div>




    </div>





<script src="/js/admin/testimony/testimony.js"></script>



    <%- include('../../partials/footer'); %>